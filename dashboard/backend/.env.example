# Database
DATABASE_URL="postgresql://sports_user:sports_password_change_in_production@localhost:5432/sports_betting_dashboard"

# The Odds API
ODDS_API_KEY=your_odds_api_key_here

# Server
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# Authentication
# Options: 'none' (standalone) or 'oauth2' (multi-user with OAuth2)
AUTH_MODE=none
SESSION_SECRET=change-me-to-a-long-random-string-in-production

# Microsoft Azure AD OAuth2 (optional - only needed if AUTH_MODE=oauth2)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# Google OAuth2 (optional - only needed if AUTH_MODE=oauth2)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# JWT Secret for API tokens
JWT_SECRET=change-me-in-production

# Sync intervals (minutes)
ODDS_SYNC_INTERVAL=10
OUTCOME_CHECK_INTERVAL=5

# Logging
LOG_LEVEL=info
