{
  "manifest_version": "0.2",
  "name": "sports-data-mcp",
  "version": "0.2.1",
  "description": "MCP server providing sports data from The Odds API and ESPN API with natural language query support",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "homepage": "https://github.com/yourusername/sports-odds-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sports-odds-mcp.git"
  },
  "icon": "icon.png",
  "server": {
    "type": "binary",
    "entry_point": "sports_mcp_server.py",
    "mcp_config": {
      "command": "python",
      "args": [
        "${__dirname}/sports_mcp_server.py"
      ],
      "env": {
        "SPORTS_MCP_CONFIG_DIR": "${APPDATA}/Claude/sports-mcp-config"
      }
    }
  }
}
